[user]
    name = Maxim Khnykin
    email = ebyrdeu.khnykin@gmail.com
    signingkey = 

[core]
    autocrlf = input
    safecrlf = true
    defaultBranch = main
	editor = nvim

[commit]
    gpgsign = true

[ui]
    color = always

[color]
    ui = true

[merge]
    tool = nvim -d

[alias]
    s = status
    st = status
    lg = log --oneline
    last = log -1 HEAD
    cl = log -p -- ':(exclude)Cargo.lock'
    pf = push --force-with-lease
    ss = "!f() { git stash show stash^{/$*} -p; }; f"
    sa = "!f() { git stash apply stash^{/$*}; }; f"
    sl = stash list

[pull]
    ff = only

[push]
    default = simple

[help]
    autocorrect = 1

[github]
    user = ebyrdeu

[diff]
	algorithm = histogram
	indentHeuristic = true

