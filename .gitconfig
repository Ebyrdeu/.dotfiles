[core]
	autocrlf = input
    safecrlf = warn
	editor = nvim

[commit]
    gpgsign = true

[ui]
    color = always

[color]
    ui = true

[merge]
    tool = nvim -d

[alias]
	ss = "!f() { git stash show stash^{/$*} -p; }; f"
	sa = "!f() { git stash apply stash^{/$*}; }; f"

[pull]
    ff = only

[push]
    default = simple

[help]
    autocorrect = 1

[github]
    user = ebyrdeu

[diff]
	algorithm = histogram
	indentHeuristic = true

[init]
	defaultBranch = main
